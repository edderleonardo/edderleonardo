---
import Section from "../Section.astro";

import { education } from "@cv";
---

<Section title="EducaciÃ³n">
  <ul>
    {
      education.map(({ institution, startDate, endDate, area }) => {
        const years = `${startDate} - ${endDate}`;

        return (
          <li>
            <article>
              <header>
                <div>
                  <h3 class="text-gray-900 dark:text-white">{institution}</h3>
                </div>

                <time class="text-gray-900 dark:text-white">{years}</time>
              </header>

              <footer>
                <p class="text-gray-950 dark:text-white">{area}</p>
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    font-size: 0.85rem;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
    article div:first-child {
      max-width: 225px;
    }
  }
</style>
