---
import Section from "../Section.astro"

import { work } from "@cv"

const darkMode = typeof window !== 'undefined' ? localStorage.getItem('darkMode') : true;

---

<Section title="Experiencia laboral">
  <ul>
    {
      work.map(
        ({ name, startDate, endDate, position, summary, url }) => {
          const endYear = endDate != null ? endDate : "Actual"
          const years = `${startDate} - ${endYear}`
          return (
            <li>
              <article>
                <header>
                  <div>
                    <h3 class="text-gray-900 dark:text-white">
                      <a href={url} title={`Ver ${name}`} target="_blank">
                        {name}
                      </a>
                    </h3>
                    <h4 class="text-gray-950 dark:text-white">{position}</h4>
                  </div>
                  <time class="text-gray-900 dark:text-white">{years}</time>
                </header>

                <footer>
                  <p class="text-gray-600 dark:text-slate-50">{summary}</p>
                </footer>
              </article>
            </li>
          )
        }
      )
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
  }

  article a:hover {
    text-decoration: underline;
  }
  article h3 {
    margin-bottom: 4px;
    font-weight: 600;
  }
  article h4 {
    font-weight: 400;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
    /* min-width: 102px; */
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>
