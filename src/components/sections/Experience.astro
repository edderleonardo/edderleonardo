---
import Section from "../Section.astro";

interface Props {
  cvData: any;
}

const { cvData } = Astro.props;
const work = cvData.work;

// Títulos según idioma
const lang = Astro.url.pathname.startsWith("/es") ? "es" : "en";
const sectionTitle = lang === "en" ? "Work Experience" : "Experiencia laboral";
const currentText = lang === "en" ? "Current" : "Actual";
const skillsText = lang === "en" ? "Skills" : "Destrezas";
---

<Section title={sectionTitle}>
  <ul>
    {
      work.map(
        ({
          name,
          startDate,
          endDate,
          position,
          summary,
          url,
          highlights,
          skills,
        }) => {
          const endYear = endDate != null ? endDate : currentText;
          const years = `${startDate} - ${endYear}`;
          return (
            <li>
              <article>
                <header>
                  <div>
                    <h3 class="text-gray-900 dark:text-white">
                      <a href={url} title={`Ver ${name}`} target="_blank">
                        {name}
                      </a>
                    </h3>
                    <h4 class="text-gray-950 dark:text-white">{position}</h4>
                  </div>
                  <time class="text-gray-900 dark:text-white">{years}</time>
                </header>

                <footer>
                  <p class="text-gray-600 dark:text-slate-50">{summary}</p>
                  {highlights && highlights.length > 0 && (
                    <ul class="no-gap mt-5">
                      {highlights.map((highlight) => (
                        <li class="text-gray-600 dark:text-slate-50 mt-1">
                          {highlight}
                        </li>
                      ))}
                    </ul>
                  )}
                  {skills && skills.length > 0 && (
                    <div class="skills-section">
                      <p>
                        <strong class="text-gray-950 dark:text-white">
                          <span class="back"> {skillsText.slice(0, 4)}</span>{skillsText.slice(4)}
                        </strong>
                      </p>
                      <p class="mt-1 text-gray-800 dark:text-slate-50">
                        {skills.join(", ")}
                      </p>
                    </div>
                  )}
                </footer>
              </article>
            </li>
          );
        }
      )
    }
  </ul>
</Section>

<style>
  .back {
    background-color: #f8b84b;
    padding: 5px 0 5px 5px;
  }

  .skills-section {
    margin-top: 1.25rem;
  }

  .no-gap {
    gap: 0 !important;
    list-style: initial;
    padding-left: 20px;
    font-size: 0.9rem;
  }
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
  }

  article a:hover {
    text-decoration: underline;
  }
  article h3 {
    margin-bottom: 4px;
    font-weight: 600;
  }
  article h4 {
    font-weight: 400;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
    /* min-width: 102px; */
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>
